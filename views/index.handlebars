<h1>Burger!</h1>

<h2>Eat-Da-Burger!</h2>

<ul>
  {{#each burgerData}}
    {{#unless devoured}}
      {{> cats/cat-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already eaten</h2>

<ul>
  {{#each burgerData}}
    {{#if devoured}}
      {{> cats/cat-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add Burger</button>
</form>
